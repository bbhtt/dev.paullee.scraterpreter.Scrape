{
    "app-id": "dev.paullee.scraterpreter.Scrape",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "scrape",
    "finish-args": [
        "--filesystem=home:ro"
    ],
    "modules": [
        {
            "name": "scrape",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/scraterpreter/scrape.git",
                    "tag": "20.06.3",
                    "commit": "00ea9b500b30af8e56375769791ef5449e386579"
                }
            ],
            "builddir": true
        },
        {
            "name": "etc",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "file",
                    "path": "dev.paullee.scraterpreter.Scrape.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "dev.paullee.scraterpreter.Scrape.png"
                }
            ],
            "builddir": true,
            "build-commands": [
                "install -Dm644 dev.paullee.scraterpreter.Scrape.png /app/share/icons/hicolor/128x128/apps/dev.paullee.scraterpreter.Scrape.png",
                "install -Dm644 dev.paullee.scraterpreter.Scrape.metainfo.xml /app/share/metainfo/dev.paullee.scraterpreter.Scrape.metainfo.xml"
            ]
        }
    ]
}
